
<div class= "container">
    <div class= "items">
        <p> Amount of food items to buy: <%= @shopping_list.count %> </p>
        <p>Total value of food needed: <%= @shopping_list.sum(:price) %> </p>
    </div>

    <div id="foods">
        <br/>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% @shopping_list.each do |item| %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.quantity %></td>
                    <td><%= item.price %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    <div>
    <%= link_to 'Back', new_food_path %>
</div>
