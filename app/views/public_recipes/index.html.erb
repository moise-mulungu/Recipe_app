<div class="wcontainer">
  <div class="cont">
    <% if @public_recipes.empty? %>
      <div>
        <h2>No recipes available yet!<h2>
      </div>
    <% else %>
      <div>
      <h1 class="mb-3">Public Recipes</h1>
        <% @public_recipes.each do |public_recipe| %>
          <% sum = 0 %>
          <%= link_to recipe_path(public_recipe.id) do %>
            <div class="border border-dark p-4 row">
              <div class="col-sm">
                <h1><%= public_recipe.name %></h1>
                <p><%= "By: #{public_recipe.user.name}" %></p>
              </div>
              <div class="col-sm">
              <p class="deets"><%= "Total food items: #{public_recipe.recipe_foods.count}" %></p>
              <% public_recipe.recipe_foods.each {|food| sum += food.quantity * food.food.price} %>
              <p><span><%= "Total Price $#{sum}" %></span></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
   </div>
</div>